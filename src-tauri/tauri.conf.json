{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ASCII Reef",
  "version": "0.1.0",
  "identifier": "com.kroolworld.ascii-reef",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npx vite dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ASCII Reef",
        "width": 540,
        "height": 256,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {}
}
